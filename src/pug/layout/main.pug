include ../includes/mixins.pug
block variable
doctype html
html(lang="ua" data-status="local")
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
    //- Edge и ряд мобильных браузеров слишком умны. Отключим это.
    meta(name='format-detection', content='telephone=no')
    meta(name='format-detection', content='date=no')
    meta(name='format-detection', content='address=no')
    meta(name='format-detection', content='email=no')
    meta(content='notranslate', name='google')
    <link rel="icon" type="image/png" href="/static/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/static/favicon.svg" />
    <link rel="shortcut icon" href="/static/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/static/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="TDV" />
    <link rel="manifest" href="/static/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#1a1a1d">
    <meta name="msapplication-config" content="/static/browserconfig.xml">
    <meta name="theme-color" content="#1a1a1d">
    block meta
    block head

  body(class= class_page id= id_page)
    // START SVG SPRITE
    include ../../assets/svg-sprite/sprite/symbol_sprite.php
    // END SVG SPRITE
    // START LOADER
    include ../includes/loader.html
    // END LOADER
    // START POPUP MODAL
    include ../includes/popup.pug
    include ../includes/construction-popup.pug  
    include ../includes/menu.pug
    // END POPUP MODAL
    .toast-wrapper(data-toast-wrapper)
    // START HEADER
    block header
    // END HEADER
    .page__inner(data-scroll-container)
      .page__content
        block content
        // START FOOTER
      block footer
        // END FOOTER
    block scripts
