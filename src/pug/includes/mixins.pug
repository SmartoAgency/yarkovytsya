mixin button-primary(title)
	button(type="button" class="button-primary")&attributes(attributes)
		span(data-title=title) #{title}
		.button-primary__circle
mixin button-primary-link(title, url, blank = false)
	if blank
		a(href=url target="_blank" rel="nofollow").button-primary&attributes(attributes)
			span(data-title=title) #{title}
			.button-primary__circle
	else
		a(href=url).button-primary&attributes(attributes)
			span(data-title=title) #{title}
			.button-primary__circle

